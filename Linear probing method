#include <stdio.h>
#define SIZE 10

int hashTable[SIZE];

void insert(int key) {
    int index = key % SIZE;
    int start = index;
    while (hashTable[index] != -1) {
        index = (index + 1) % SIZE;
        if (index == start) { printf("Hash Table Full\n"); return; }
    }
    hashTable[index] = key;
}

void display() {
    for (int i = 0; i < SIZE; i++)
        printf("%d -> %d\n", i, hashTable[i]);
}

int main() {
    int choice, key;
    for (int i = 0; i < SIZE; i++) hashTable[i] = -1;

    while (1) {
        printf("\n1.Insert  2.Display  3.Exit\nChoice: ");
        scanf("%d", &choice);
        if (choice == 1) {
            printf("Enter key: ");
            scanf("%d", &key);
            insert(key);
        }
        else if (choice == 2) display();
        else break;
    }
    return 0;
}
