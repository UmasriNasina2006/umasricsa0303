#include <stdio.h>
int main()
{
    int n, i;
    int n, i, t1 = 0, t2 = 1, next;
    printf("Enter number of terms: ");
    scanf("%d", &n);

    int fib[n];
    fib[0] = 0;
    fib[1] = 1;

    for (i = 2; i < n; i++)
        fib[i] = fib[i - 1] + fib[i - 2];

    for (i = 0; i < n; i++)
        printf("%d ", fib[i]);

    printf("Fibonacci Series: ");
    for (i = 1; i <= n; i++) 
    {
        printf("%d ", t1);
        next = t1 + t2;
        t1 = t2;
        t2 = next;
    }
    return 0;
}
